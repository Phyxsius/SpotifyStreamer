<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="@drawable/abc_list_divider_mtrl_alpha"
    android:orientation="horizontal"
    tools:context="us.phyxsi.spotifystreamer.MainActivity">

    <!--
    This layout is a two-pane layout for the Items master/detail flow.
    -->

    <fragment
        android:id="@+id/fragment_artist"
        android:name="us.phyxsi.spotifystreamer.ArtistFragment"
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_list" />

    <FrameLayout
        android:id="@+id/tracks_container"
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="4"/>

</LinearLayout>